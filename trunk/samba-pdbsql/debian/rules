#!/usr/bin/make -f

build: build-stamp

build-stamp:
	dh_testdir
	cd source && ./configure --prefix=/usr 
	$(MAKE) -C source
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	
	dh_clean
	-$(MAKE) -C source distclean

binary-indep: build

binary-arch: build
	dh_testdir
	dh_testroot
	
	dh_clean -k
	dh_installdirs
	$(MAKE) -C source install DESTDIR=`pwd`/debian/pdbsql
	dh_strip
	dh_installdocs -a
	dh_installchangelogs -a 
	dh_installexamples -a docs/smb.conf.mysql
	dh_installman -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: build clean binary-arch binary-indep binary
